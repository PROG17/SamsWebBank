@model TransferVM
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-sm-6">
        <h2>Transfer from account</h2>


        <div asp-validation-summary="All" class="text-danger"></div>

        <form id="transferForm"
              data-ajax="true"
              data-ajax-method="POST"
              data-ajax-mode="replace"
              data-ajax-update="#result"
              asp-action="Transfer">


            <div class="form-group">
                <label asp-for="FromAccount"></label>
                <input asp-for="FromAccount" class="form-control" />
                <span asp-validation-for="FromAccount"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToAccount"></label>
                <input asp-for="ToAccount" class="form-control" />
                <span asp-validation-for="ToAccount"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount"></span>
            </div>

           

            <button  id="submitBtn" class="btn btn-primary" type="submit">Transfer</button>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div id="result"></div>
    </div>
</div>


